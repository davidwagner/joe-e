<web-app>
<concurrency>serialized</concurrency>
<js-root path="static/js" />
<css-root path="static/css" />
<session-init>org.joe_e.servlet.mail.notjoe_e.SessionInit</session-init>
<servlet>
  <servlet-name>index</servlet-name>
  <url-pattern>/</url-pattern>
  <servlet-class>org.joe_e.servlet.mail.IndexServlet</servlet-class>
  <js-file name="index.js" />
  <css-file name="index.css" />
</servlet>
<servlet>
  <servlet-name>login</servlet-name>
  <url-pattern>/login</url-pattern>
  <servlet-class>org.joe_e.servlet.mail.LoginServlet</servlet-class>
  <js-file name="login.js" />
  <css-file name="index.css" />
</servlet>
<servlet>
  <servlet-name>create</servlet-name>
  <url-pattern>/create</url-pattern>
  <servlet-class>org.joe_e.servlet.mail.CreateAccount</servlet-class>
  <js-file name="create.js" />
  <css-file name="index.css" />
</servlet>
<servlet>
  <servlet-name>inbox</servlet-name>
  <url-pattern>/inbox</url-pattern>
  <servlet-class>org.joe_e.servlet.mail.Inbox</servlet-class>
  <js-file name="inbox.js" />
  <css-file name="index.css" />
</servlet>
<servlet>
  <servlet-name>logout</servlet-name>
  <url-pattern>/logout</url-pattern>
  <servlet-class>org.joe_e.servlet.mail.Logout</servlet-class>
  <css-file name="index.css" />
</servlet>
<servlet>
  <servlet-name>read</servlet-name>
  <url-pattern>/read</url-pattern>
  <url-pattern>*.foo</url-pattern>
  <servlet-class>org.joe_e.servlet.mail.Read</servlet-class>
  <js-file name="read.js" />
  <css-file name="index.css" />
</servlet>
<servlet>
  <servlet-name>compose</servlet-name>
  <servlet-class>org.joe_e.servlet.mail.Compose</servlet-class>
  <js-file name="compose.js" />
  <css-file name="index.css" />
</servlet>
<servlet>
  <servlet-name>testbufferedwriter</servlet-name>
  <url-pattern>/testbufferedwriter</url-pattern>
  <servlet-class>org.joe_e.servlet.mail.TestBufferedPrintWriter</servlet-class>
</servlet>
</web-app>
