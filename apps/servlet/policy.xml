<web-app>
<session-init>org.joe_e.servlet.mail.notjoe_e.SessionInit</session-init>
<servlet>
  <servlet-name>index</servlet-name>
  <servlet-class>org.joe_e.servlet.mail.IndexServlet</servlet-class>
</servlet>
<servlet>
  <servlet-name>login</servlet-name>
  <servlet-class>org.joe_e.servlet.mail.LoginServlet</servlet-class>
</servlet>
<servlet>
  <servlet-name>create</servlet-name>
  <servlet-class>org.joe_e.servlet.mail.CreateAccount</servlet-class>
</servlet>
<servlet>
  <servlet-name>inbox</servlet-name>
  <servlet-class>org.joe_e.servlet.mail.Inbox</servlet-class>
</servlet>
<servlet>
  <servlet-name>logout</servlet-name>
  <servlet-class>org.joe_e.servlet.mail.Logout</servlet-class>
</servlet>
<servlet>
  <servlet-name>read</servlet-name>
  <servlet-class>org.joe_e.servlet.mail.Read</servlet-class>
</servlet>
<servlet>
  <servlet-name>compose</servlet-name>
  <servlet-class>org.joe_e.servlet.mail.Compose</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>index</servlet-name>
  <url-pattern>/</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/login</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>create</servlet-name>
  <url-pattern>/create</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>inbox</servlet-name>
  <url-pattern>/inbox</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>logout</servlet-name>
  <url-pattern>/logout</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>read</servlet-name>
  <url-pattern>*.foo</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>compose</servlet-name>
  <url-pattern>/compose</url-pattern>
</servlet-mapping>
</web-app>
